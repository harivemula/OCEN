		"validTill",
		"terms",
		"disbursement",
		"repayment"
	],
	"properties": {
		"id": {
			"type": "string",
			"examples": [
				"e8cc6822bd4bbb4eb1b9e1b4996fbff8acb"
			]
		},
		"validTill": {
			"type": "string"
		},
		"terms": {
			"$ref": "loanterms.json"
		}
,
		"disbursement": {
			"$ref": "disbursement.json"
		}
,
		"repayment": { 
			"$ref": "repayment.json"
		},
		"description":{
			"type":"string"
		},
		"documents":{
			"type":"array",
