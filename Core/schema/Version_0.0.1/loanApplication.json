{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "Core/schema/Version_0.0.1/loanApplication.json",
    "type": "object",
    "required": [
        "loanApplicationId",
        "loanApplicationStatus"
    ],
    "additionalProperties": true,
    "properties": {
        "loanApplicationId": {
            "type": "string",
            "examples": [
                "x8cc6822bd4bbb4eb1b9e1b4996fbff8acb"
            ]
        },
        "actionRequired" : {
            "$ref": "actionrequired.json"
        },
        "rejectionDetails" : {
            "$ref": "rejectiondetail.json"
        },
        "offers": {
            "$ref": "offer.json"
        },
        "loanApplicationStatus": {
            "type": "string",
            "examples": [
                "OFFER_ACCEPTED","PROCESSING","OFFERED","GRANTED","REJECTED"
            ]
        }
    }
}