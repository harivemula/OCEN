{
    "$schema": "http://json-schema.org/draft-07/schema#", 
	"$id": "Core/schema/Version_0.0.1/loanOffer.json", 
	"type": "object",
	"required": [
        "loanApplicationId",
        "loanApplicationStatus"
    ],
    "properties": {
        "loanApplicationId":{
            "type":"string"
        },
        "rejectionDetails":{
            "type":"array",
            "items": {
                "$ref": "rejectiondetail.json"
            }
        },
        "actionRequired":{
            "type":"array",
            "items": {
                "$ref": "actionrequired.json"
            }
        },
        "offers":{
            "type":"array",
            "items": {
                "$ref": "offer.json"
            }
        },
        "loanApplicationStatus":{
            "type":"string",
            "enum": ["PROCESSING","OFFERED","OFFER_ACCEPTED","GRANTED","REJECTED","ACTION REQUIRED"]
        }
    }
}