{
	"$schema": "http://json-schema.org/draft-07/schema#", 
	"$id": "https://raw.githubusercontent.com/harivemula/OCEN/f2/LoanApplication/schema/Version_0.0.1/CreateLoanApplications/CreateLoanApplicationsRequest.json",
	"type": "object",
	"required": [
		"metadata",
		"requestId",
		"loanApplications"
	],
	"properties": {
		"metadata": {
			"$ref": "https://raw.githubusercontent.com/harivemula/OCEN/f2/Core/schema/Version_0.0.1/metadata.json"
		}
,
		"requestId": { 
			"type": "string",
			"examples": [
				"e8cc6822bd4bbb4eb1b9e1b4996fbff8acb"
			]
		},
		"loanApplications": {
			"type": "array",
			"items":{ 
				"type": "object",
				"required": [
					"createdDate",
					"loanApplicationId",
					"type",
					"borrower",
					"collaterals",
					"guarantors",
					"applicants",
					"terms"
				],
				"properties": {
					"createdDate": { 
                        "type": "string"
					},
					"loanApplicationId": { 
						"type": "string"
					},
					"type": { 
						"type": "string",
						"enum": [
							"CASHFLOW","PERSONAL","HOME","VEHICLE","BUSINESS"
						]
					},
					"borrower": {
						"$ref": "https://raw.githubusercontent.com/harivemula/OCEN/f2/Core/schema/Version_0.0.1/borrower.json"
					}
,
					"collaterals": { 
						"type": "array",
						"items":{
							"$ref": "https://raw.githubusercontent.com/harivemula/OCEN/f2/Core/schema/Version_0.0.1/collateral.json"
						}

					},
					"guarantors": {
						"type": "array",
						"items": {
							"$ref": "https://raw.githubusercontent.com/harivemula/OCEN/f2/Core/schema/Version_0.0.1/guarantor.json"
							
						}
					},
					"applicants": {
						"type": "array",
						"items":{
							"$ref": "https://raw.githubusercontent.com/harivemula/OCEN/f2/Core/schema/Version_0.0.1/applicant.json"
						}

					},
					"terms": {
						"$ref": "https://raw.githubusercontent.com/harivemula/OCEN/f2/Core/schema/Version_0.0.1/loanterms.json"
					},
					"url":{
						"type":"string"
					},
					"description":{
						"type":"string"
					},
					"extensibleData":{
						"$ref": "https://raw.githubusercontent.com/harivemula/OCEN/f2/Core/schema/Version_0.0.1/extensibleData.json"
					}

				}
			}

		}
	}
}
