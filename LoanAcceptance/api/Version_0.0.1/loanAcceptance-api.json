{
    "openapi":"3.2.0",
    "info":{
        "title":"Loan Acceptance",
        "description":"Loan Acceptance through OTP",
        "version":"3.2"
    },
    "paths":{
        "/v3/loan/loanAgreementRequest":{
            "post":{
                "description":"API is used by LSP to fetch the Loan Agreement for the offer chosen by the borrower",
                "requestBody":{
                    "description":" Loan agreement request ",
                    "content":{
                        "application/json":{
                            "schema":{
                                "$ref":"https://raw.githubusercontent.com/harivemula/OCEN/f1/LoanAcceptance/schema/Version_0.0.1/LoanAgreement/LoanAgreementmentRequest.json"
                            }
                        }
                    }
                },
                "responses":{
                    "200":{
                        "description":"Acknowledgement to request received ",
                        "content":{
                            "application/json":{
                                "schema":{
                                "$ref":"https://raw.githubusercontent.com/harivemula/OCEN/f1/Core/schema/Version_0.0.1/ack.json"
                                }
                            }
                        }

                    }
                }
            }
        },
        "/v3/loan/loanAgreementResponse":{
            "post":{
                "description":"This API is used by Lender to send the Loan Agreement for the offer chosen by the borrower",
